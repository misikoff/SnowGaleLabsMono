{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      // This is a hack for the monorepo since the nativewind.d.ts types should have been enough
      // https://github.com/nativewind/nativewind/issues/77#issuecomment-1913591952
      // "react-native": [
      //   "../../node_modules/react-native",
      //   "../../node_modules/nativewind"
      // ]
    },
    "target": "es2016",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "types/**/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.ttf",
    "**.js",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
